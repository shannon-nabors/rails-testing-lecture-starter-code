<div class="heading secondary-header">Flag of <%= @flag.region %></div>
<div class="ui container">
<div class="main-wrapper wrapper">
    <div class="center">
        <p class="flag-info"><%= @flag.info %></p>
        <%= image_tag @flag.image_url, class: "show-image" %>
    </div>
    <div class="ui list">
        <div class="item">
            <i class="clock icon"></i>
            <div class="content">
                <%= @flag.current? ? "This is the current flag of #{@flag.region}" : "This is NOT the current flag of #{@flag.region}"%>
            </div>
        </div>
        <div class="item">
            <i class="question circle icon"></i>
            <div class="content">
                Type: <%= @flag.flag_type %>
            </div>
        </div>
    </div>
</div>
<div class="center wrapper">
    <%=link_to "See all flags", flags_path, class: "ui button"%>
</div>
</div>
